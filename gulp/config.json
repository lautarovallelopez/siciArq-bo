{
  "clean": {
    "dist": [
      "dist/"
    ]
  },
  "copy": {
    "dist": {
      "src": [
        "public/font/**",
        "public/images/**",
        "!public/*.ico",
        "public/index.html",
        "src/**/**",
        "webpack.config.prod.js",
        "babel.config.js",
        "index.js"
      ],
      "dest": "dist/"
    }
  },
  "htmlmin": {
    "src": [
      "public/*.html"
    ],
    "dest": "dist/public",
    "options": {
      "collapseWhitespace": true
    }
  },
  "eslint": {
    "src": [
      "src/**/*.js"
    ]
  }
}
